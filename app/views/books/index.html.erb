<body>
<!--Books 一覧画面-->
  <h1>Books</h1>
<table>
  <thread>

  <th>Title</th>
  <th>Body</th>
  </thread>
  <tbody>
    <% @books.each do |book| %>
    <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<!--New book 投稿部分-->
<h2>New book</h2>
<!--form_withの利用-->
<%= form_with model: Book.new, url: '/books', method: :post do |f| %>

  <div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
  </div>

  <div class="field">
  <label>Body</label>
  <%= f.text_area :body %>
  </div>

  <div class="actions">
  <%= f.submit 'Create Book' %>
  </div>
<% end %>

</body>
