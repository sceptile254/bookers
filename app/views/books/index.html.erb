<body>
<!--Books 一覧画面-->
  <h1>Books</h1>
<table>
  <thread>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thread>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>

      <td><%= book.body %></td>

      <td>
        <%= link_to "Show", book_path(book.id) %>
      </td>

      <td>
        <a class="edit_id" href="/books/:id/edit">Edit</a>
      </td>

      <td>
        <a data-confirm="Are you sure?" class="destroy_id" rel="nofollow" data-method="delete" href="/books/:id">Destroy</a>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<!--New book 投稿部分-->
<h2>New book</h2>
<!--form_withの利用-->
<%= form_with model: Book.new, url: '/books', method: :post do |f| %>

  <div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
  </div>

  <div class="field">
  <label>Body</label>
  <%= f.text_area :body %>
  </div>

  <div class="actions">
  <%= f.submit 'Create Book' %>
  </div>
<% end %>

</body>
